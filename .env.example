# Database Configuration - Environment Variables
# Copy this file to .env and fill in your actual values

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=60

# PostgreSQL Configuration
# Master Nodes
PG_MASTER_NA_HOST=localhost
PG_MASTER_NA_PORT=5432
PG_MASTER_EU_HOST=localhost
PG_MASTER_EU_PORT=5433
PG_MASTER_ASIA_HOST=localhost
PG_MASTER_ASIA_PORT=5434

# Slave Nodes
PG_SLAVE_NA_HOST=localhost
PG_SLAVE_NA_PORT=5435
PG_SLAVE_EU_HOST=localhost
PG_SLAVE_EU_PORT=5436
PG_SLAVE_ASIA_HOST=localhost
PG_SLAVE_ASIA_PORT=5437

# PostgreSQL Database Settings
PG_DATABASE=elearning
PG_USER=postgres
PG_PASSWORD=postgres

# Connection Pool Settings
PG_POOL_SIZE=10
PG_MAX_OVERFLOW=20
PG_POOL_TIMEOUT=30

# MongoDB Configuration
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_DATABASE=elearning_content
MONGO_USER=admin
MONGO_PASSWORD=admin
MONGO_REPLICA_SET=

# MongoDB Pool Settings
MONGO_POOL_SIZE=10
MONGO_MAX_POOL_SIZE=50
